{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <div class="bg-light py-3 px-3">
                    <h1>Connectez-vous !</h1>
                    {% if hasErrors %}
                        <div class="alert alert-danger">
                            Une erreur est survenue, le nom d'utilisteur ou alors le mot de passe est invalide
                        </div>
                    {% endif %}
                    
                    <form action="{{ path('account_login')}}" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" name="_username" id="email" class="form-control" value="{{username}}" placeholder="Adresse mail ..." required>
                        </div>
                        <div class="form-group">
                            <label for="email">Mot de passe</label>
                            <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe ..." required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Connexion !</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
