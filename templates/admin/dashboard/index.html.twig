{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row my-3">
        <div class="col-md">
            <div class="card text-white bg-primary mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <i class="fas fa-users fa-3x"></i>
                        </div>
                        <div class="col-md-8">
                            <h4 class="card-title">{{ stats.users }} Utilisateurs</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md">
            <div class="card text-white bg-success mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <i class="fas fa-hotel fa-3x"></i>
                        </div>
                        <div class="col-md-8">
                            <h4 class="card-title">{{stats.ads}} Annonces postées</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md">
            <div class="card text-white bg-warning mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <i class="fas fa-folder fa-3x"></i>
                        </div>
                        <div class="col-md-8">
                            <h4 class="card-title">{{stats.bookings}} Réservations</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md">
            <div class="card text-white bg-success mb-3 text-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <i class="fas fa-comments fa-3x"></i>
                        </div>
                        <div class="col-md-8">
                            <h4 class="card-title">{{stats.comments}} Avis postés</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr>
    <div class="row">
        <div class="col-md">
            <div class="alert alert-success">
                <h1 class="alert-heading my-3"><i class="fas fa-arrow-up"></i> Les annonces mieux notées</h1>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th width="60%">Annonce</th>
                            <th width="33%">Propriétaire</th>
                            <th width="7%">Note</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for best in stats.bestAds %}
                            <tr>
                                <td>{{ best.title }}</td>
                                <td>
                                    <img class="avatar avatar-micro" src="{{ best.picture }}" alt="L'avatar de {{ best.firstName ~ best.lastName}}" >
                                    {{ best.firstName ~' '~ best.lastName}} 
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-dark">{{ best.note | number_format(1, ',', ' ') }}</span>
                                </td>
                            </tr>                    
                        {% endfor %}
                    </tbody>
                </table>            
            </div>
        </div>
        <div class="col-md">
            <div class="alert alert-warning">
                <h1 class="alert-heading my-3"><i class="fas fa-arrow-down"></i> Les annonces moins notées</h1>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th width="60%">Annonce</th>
                            <th width="33%">Propriétaire</th>
                            <th width="7%">Note</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for best in stats.worstAds %}
                            <tr>
                                <td>{{ best.title }}</td>
                                <td>
                                    <img class="avatar avatar-micro" src="{{ best.picture }}" alt="L'avatar de {{ best.firstName ~ best.lastName}}" >
                                    {{ best.firstName ~' '~ best.lastName}} 
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-danger">{{ best.note | number_format(1, ',', ' ') }}</span>
                                </td>
                            </tr>                    
                        {% endfor %}
                    </tbody>
                </table>            
            </div>
        </div>
    </div>
</div>
{% endblock %}
